aws s3api create-bucket --bucket xenium-tf-state --region ap-southeast-2 --create-bucket-configuration LocationConstraint=ap-southeast-2


aws dynamodb create-table \
  --table-name terraform-locks \
  --attribute-definitions AttributeName=LockID,AttributeType=S \
  --key-schema AttributeName=LockID,KeyType=HASH \
  --billing-mode PAY_PER_REQUEST \
  --region ap-southeast-2


# Plan/Apply:

cd live/dev/vpc

terragrunt plan - Plans just the VPC.

terragrunt apply - Applies just the VPC.

# Plan/Apply Everything:

cd live/dev

terragrunt run-all plan - Plans every module in the dev environment.

terragrunt apply-all - Applies every module in the correct order.